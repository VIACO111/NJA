---
interface Props {
  title?: string;
  subtitle?: string;
  items: string[];
}

const { title = 'Key Takeaways', subtitle, items } = Astro.props;
---

<section class="bg-slate-50 py-20 sm:py-28">
  <div class="mx-auto max-w-6xl px-6">
    <h2 class="text-center text-2xl font-semibold tracking-tight text-via-navy sm:text-3xl">
      {title}
    </h2>
    {subtitle && (
      <p class="mx-auto mt-4 max-w-2xl text-center text-slate-600">
        {subtitle}
      </p>
    )}
    <ul class="mt-14 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((item, i) => (
        <li class="relative rounded-xl bg-white p-8 shadow-sm ring-1 ring-slate-200/80 transition hover:ring-via-navy-muted/40">
          <span class="flex h-10 w-10 items-center justify-center rounded-lg bg-via-navy text-sm font-semibold text-white">
            {i + 1}
          </span>
          <p class="mt-5 text-base font-medium text-via-navy">{item}</p>
        </li>
      ))}
    </ul>
  </div>
</section>
