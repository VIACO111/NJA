---
interface Props {
  onlineDate: string;
  onlineTime: string;
  inPersonDate: string;
  inPersonTime: string;
  location: string;
}

const { onlineDate, onlineTime, inPersonDate, inPersonTime, location } = Astro.props;
---

<section class="py-24 bg-slate-50">
  <div class="mx-auto max-w-6xl px-6">
    <div class="mx-auto max-w-3xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-via-navy sm:text-4xl">
        Join the Training
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        Choose how you want to participate. We have an online session for convenience and an in-person meet & greet for deeper connection.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Online Session -->
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100 flex flex-col items-center text-center hover:shadow-md transition-shadow">
        <div class="w-12 h-12 bg-blue-50 rounded-full flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-blue-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-via-navy mb-2">Online Session</h3>
        <p class="text-slate-600 mb-1">{onlineDate}</p>
        <p class="text-slate-900 font-semibold text-lg">{onlineTime}</p>
        <div class="mt-6">
          <span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
            Zoom / Remote
          </span>
        </div>
      </div>

      <!-- In-Person Session -->
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100 flex flex-col items-center text-center hover:shadow-md transition-shadow">
        <div class="w-12 h-12 bg-emerald-50 rounded-full flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-emerald-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-via-navy mb-2">Live Q&A & Meetup</h3>
        <p class="text-slate-600 mb-1">{inPersonDate}</p>
        <p class="text-slate-900 font-semibold text-lg">{inPersonTime}</p>
        <div class="mt-6">
          <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-sm font-medium text-emerald-700 ring-1 ring-inset ring-emerald-700/10">
            {location}
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
