---
interface Props {
  onlineDate: string;
  onlineTime: string;
  inPersonDate?: string;
  inPersonTime?: string;
  location?: string;
}

const { onlineDate, onlineTime } = Astro.props;
---

<section class="py-24 bg-via-light">
  <div class="mx-auto max-w-6xl px-6">
    <div class="mx-auto max-w-3xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-via-black sm:text-4xl">
        Join the Training
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        Join us for an online training session designed for P&C leaders.
      </p>
    </div>

    <div class="max-w-md mx-auto">
      <!-- Online Session -->
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100 flex flex-col items-center text-center hover:shadow-md transition-shadow">
        <div class="w-12 h-12 bg-via-light rounded-full flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-via-black">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-via-black mb-2">Online Session</h3>
        <p class="text-slate-600 mb-1">{onlineDate}</p>
        <p class="text-via-black font-semibold text-lg">{onlineTime}</p>
        <div class="mt-6">
          <span class="inline-flex items-center rounded-full bg-via-light px-3 py-1 text-sm font-medium text-via-black ring-1 ring-inset ring-black/10">
            Zoom / Remote
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
