---
interface Props {
  headlineLines: string[];
  body: string;
  ctaLabel: string;
  ctaUrl: string;
}

const { headlineLines, body, ctaLabel, ctaUrl } = Astro.props;
---

<section class="py-24 bg-via-black flex flex-col items-center justify-center text-white px-6">
  <div class="max-w-4xl mx-auto text-center space-y-12">
    <div class="font-montserrat font-black text-6xl sm:text-8xl lg:text-[120px] leading-[0.9] tracking-tighter uppercase space-y-2">
      {headlineLines.map((line) => (
        <div class="block">{line}</div>
      ))}
    </div>

    <div class="relative w-32 h-32 sm:w-48 sm:h-48 flex items-center justify-center border-2 border-white rounded-full p-8 mx-auto transition-colors">
      <img
        src={`${import.meta.env.BASE_URL}/via-assets/logo-white.svg`}
        alt="VIA CO"
        class="w-full h-full object-contain"
      />
    </div>

    <p class="text-xl sm:text-2xl text-slate-300 leading-relaxed max-w-3xl mx-auto">
      {body}
    </p>

    <a
      href={ctaUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center text-white hover:text-slate-300 transition-colors text-sm font-semibold uppercase tracking-wider"
    >
      {ctaLabel}
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    </a>
  </div>
</section>
