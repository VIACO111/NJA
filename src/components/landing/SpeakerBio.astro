---
interface Props {
  sectionTitle?: string;
  name: string;
  title?: string;
  bio: string;
  companyName?: string;
  companyUrl?: string;
  imageSrc?: string;
  imageAlt?: string;
}

const { sectionTitle = 'Speaker', name, title, bio, companyName = 'VIA', companyUrl = 'https://www.wearevia.co', imageSrc, imageAlt = name } = Astro.props;
---

<section class="bg-white py-20 sm:py-28">
  <div class="mx-auto max-w-5xl px-6">
    <h2 class="text-2xl font-semibold tracking-tight text-via-black sm:text-3xl">
      {sectionTitle}
    </h2>
    <div class="mt-12 flex flex-col gap-12 sm:flex-row sm:items-start">
      <div class="shrink-0 sm:order-2">
        {imageSrc ? (
          <img
            src={imageSrc}
            alt={imageAlt}
            class="h-48 w-48 rounded-2xl object-cover shadow-lg grayscale sm:h-56 sm:w-56"
            width="224"
            height="224"
          />
        ) : (
          <div
            class="flex h-48 w-48 items-center justify-center rounded-2xl bg-via-light text-slate-400 sm:h-56 sm:w-56"
            aria-hidden="true"
          >
            <span class="text-sm font-medium">Headshot</span>
          </div>
        )}
      </div>
      <div class="min-w-0 flex-1 sm:order-1">
        <h3 class="text-xl font-semibold text-via-black">{name}</h3>
        {title && (
          <p class="mt-1 text-base text-via-gray">{title}</p>
        )}
        {companyName && (
          <p class="mt-2">
            <a
              href={companyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="text-base font-medium text-via-black underline decoration-slate-300 underline-offset-2 hover:decoration-via-black"
            >
              {companyName}
            </a>
          </p>
        )}
        <p class="mt-6 text-slate-600 leading-relaxed">{bio}</p>
      </div>
    </div>
  </div>
</section>
