---
interface Props {
  title: string;
  subtitle?: string;
  conferenceName?: string;
  date?: string;
  /** Primary CTA URL (e.g. training signup). If set, the button is shown. */
  primaryCtaUrl?: string;
  /** Label for the primary CTA button. */
  primaryCtaLabel?: string;
}

const { title, subtitle, conferenceName, date, primaryCtaUrl = '#', primaryCtaLabel = 'Sign up' } = Astro.props;
---

<section class="relative bg-via-navy text-white overflow-hidden">
  <div class="mx-auto max-w-6xl px-6 py-24 sm:py-32 lg:py-40">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">
        {title}
      </h1>
      {subtitle && (
        <p class="mt-6 text-lg sm:text-xl text-slate-300">
          {subtitle}
        </p>
      )}
      {(conferenceName || date) && (
        <p class="mt-4 text-base sm:text-lg text-slate-400">
          {conferenceName}
          {conferenceName && date ? ' Â· ' : ''}
          {date}
        </p>
      )}
      {primaryCtaUrl && (
        <div class="mt-10 flex justify-center">
          <a
            href={primaryCtaUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center rounded-lg bg-white px-6 py-3 text-base font-semibold text-via-navy shadow-sm transition hover:bg-slate-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            {primaryCtaLabel}
          </a>
        </div>
      )}
    </div>
  </div>
</section>
