---
import Layout from '../layouts/Layout.astro';
import SignupForm from '../components/SignupForm.astro';

const WISE_PAYMENT_URL = 'https://wise.com/pay/r/jhxzrcMaIq5jqzY';
const CALENDAR_URL = 'https://calendar.google.com/calendar/event?action=TEMPLATE&tmeid=MmRjODBtdnNkYzVhZG1odWl1OWthbDQ2bXAgZm91bmRlcnNAd2VhcmV2aWEuY28&tmsrc=founders%40wearevia.co';
---

<Layout 
  title="Event Registration | VIA CO"
  description="Sign up for the NJA Meetup training sessions. Join us online or in-person in Camperdown."
>
  <main class="pt-32 pb-24 bg-via-light min-h-screen">
    <div class="mx-auto max-w-6xl px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        
        <!-- Left Column: Details -->
        <div class="space-y-12">
          <div>
            <a href={`${import.meta.env.BASE_URL}/`} class="text-sm font-semibold uppercase tracking-widest text-via-gray hover:text-via-black transition-colors flex items-center mb-8">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
              </svg>
              Back to main
            </a>
            <h1 class="font-montserrat font-black text-5xl sm:text-6xl text-via-black uppercase leading-[0.9] tracking-tighter">
              Secure Your<br/>Spot.
            </h1>
            <p class="mt-6 text-xl text-slate-600 leading-relaxed max-w-md">
              Complete the form to register for either our online elite training or the in-person Q&A meetup.
            </p>
          </div>

          <div class="space-y-8">
            <div class="p-6 bg-white rounded-xl border border-slate-100 shadow-sm">
              <h2 class="text-xl font-bold text-via-black mb-4 flex items-center">
                <span class="w-8 h-8 rounded-full bg-via-black text-white flex items-center justify-center text-sm mr-3">1</span>
                Online Elite Training
              </h2>
              <p class="text-slate-600 mb-4">Master the tools of strategic facilitation from anywhere.</p>
              <div class="flex items-center justify-between py-3 border-t border-slate-50">
                <span class="text-sm font-semibold uppercase text-via-gray">Cost</span>
                <span class="font-bold text-via-black">100 AUD</span>
              </div>
              <div class="flex items-center justify-between py-3 border-t border-slate-50">
                <span class="text-sm font-semibold uppercase text-via-gray tracking-tight">NJA Attendee Promo</span>
                <span class="font-bold text-via-black uppercase">FREE</span>
              </div>
              <a 
                href={WISE_PAYMENT_URL} 
                target="_blank" 
                rel="noopener noreferrer"
                class="mt-4 block text-center py-3 bg-via-light border border-slate-200 rounded-lg text-sm font-bold uppercase tracking-widest text-via-black hover:bg-slate-100 transition-colors"
              >
                Pay via Wise (if no code)
              </a>
            </div>

            <div class="p-6 bg-white rounded-xl border border-slate-100 shadow-sm">
              <h2 class="text-xl font-bold text-via-black mb-4 flex items-center">
                <span class="w-8 h-8 rounded-full bg-via-black text-white flex items-center justify-center text-sm mr-3">2</span>
                In-Person Q&A
              </h2>
              <p class="text-slate-600 mb-4">Join us at Camperdown Commons for a live discussion and networking.</p>
              <div class="flex items-center justify-between py-3 border-t border-slate-50">
                <span class="text-sm font-semibold uppercase text-via-gray">Cost</span>
                <span class="font-bold text-via-black uppercase">FREE</span>
              </div>
              <a 
                href={CALENDAR_URL} 
                target="_blank" 
                rel="noopener noreferrer"
                class="mt-4 inline-flex items-center font-bold text-sm uppercase tracking-widest text-via-black hover:underline"
              >
                <img src="https://calendar.google.com/calendar/images/ext/gc_button1_en-GB.gif" alt="Google Calendar" class="mr-3" />
                Add to your calendar
              </a>
            </div>
          </div>
        </div>

        <!-- Right Column: Form -->
        <div>
          <SignupForm />
          <p class="mt-8 text-center text-sm text-slate-500">
            By registering, you agree to our privacy policy and will receive event details via email.
          </p>
        </div>

      </div>
    </div>
  </main>
</Layout>
