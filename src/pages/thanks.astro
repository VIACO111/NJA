---
import Layout from '../layouts/Layout.astro';

const GOOGLE_MEET_URL = 'https://meet.google.com/wsg-vjch-mjo';
const CALENDAR_ADD_URL = 'https://calendar.google.com/calendar/event?action=TEMPLATE&tmeid=MG5saGxlZHMwYnZwMDNwYjVwMXN1N2QzYnQgZm91bmRlcnNAd2VhcmV2aWEuY28&tmsrc=founders%40wearevia.co';
const SESSION_TIME = "Thursday, 26 February · 1:00 – 2:00 PM (Australia/Sydney)";
const MEET_DIAL = "(AU) +61 2 9051 4684";
const MEET_PIN = "195 990 867";
const VIA_HOME_URL = "https://wearevia.co";
const BASE = import.meta.env.BASE_URL;
---

<Layout 
  title="Thank You | VIA CO"
  description="Thank you for registering for our event."
>
  <main class="min-h-[100dvh] min-h-[100vh] bg-via-black flex flex-col items-center justify-center text-white px-6 py-16">
    <div class="max-w-xl text-center space-y-8">
      <h1 class="font-montserrat font-black text-6xl sm:text-8xl uppercase leading-none tracking-tighter">
        Thank<br/>You.
      </h1>
      <p class="text-xl text-slate-300">
        Your registration has been received.
      </p>
      <div class="bg-white/5 border border-white/10 rounded-xl p-6 text-left space-y-4">
        <h2 class="text-sm font-bold uppercase tracking-widest text-slate-400">Say the hard things w/ VIA</h2>
        <p class="text-slate-300">{SESSION_TIME}</p>
        <p class="text-sm font-semibold text-white">Join via Google Meet:</p>
        <a 
          href={GOOGLE_MEET_URL} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-block break-all text-via-light hover:underline"
        >
          {GOOGLE_MEET_URL}
        </a>
        <p class="text-sm text-slate-400">Or dial: {MEET_DIAL} · PIN: {MEET_PIN}</p>
        <p class="text-sm text-slate-400 mt-2">Add the session to your calendar so you don't miss it:</p>
        <a 
          href={CALENDAR_ADD_URL} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center"
        >
          <img src="https://calendar.google.com/calendar/images/ext/gc_button1_en-GB.gif" alt="Add to Google Calendar" class="h-8 border-0" />
        </a>
      </div>
      <div class="pt-4">
        <a 
          href={VIA_HOME_URL} 
          target="_blank" 
          rel="noopener noreferrer"
          class="group inline-flex items-center justify-center px-8 py-4 border-2 border-white rounded-lg font-bold uppercase tracking-widest hover:bg-white transition-all"
          aria-label="Visit wearevia.co"
        >
          <img src={`${BASE}/via-assets/logo-white.svg`} alt="" class="h-8 group-hover:hidden" />
          <img src={`${BASE}/via-assets/${encodeURIComponent('VIA Logo Black Fill.svg')}`} alt="VIA CO" class="h-8 hidden group-hover:block" />
        </a>
      </div>
    </div>
  </main>
</Layout>
