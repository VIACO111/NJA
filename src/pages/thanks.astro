---
import Layout from '../layouts/Layout.astro';

const GOOGLE_MEET_URL = 'https://meet.google.com/xxx-xxxx-xxx'; // Replace with your actual Google Meet link
const SESSION_TIME = "Thursday, 26th Feb @ 1:00 PM (AEDT)";
---

<Layout 
  title="Thank You | VIA CO"
  description="Thank you for registering for our event."
>
  <main class="min-h-screen bg-via-black flex flex-col items-center justify-center text-white px-6 py-16">
    <div class="max-w-xl text-center space-y-8">
      <h1 class="font-montserrat font-black text-6xl sm:text-8xl uppercase leading-none tracking-tighter">
        Thank<br/>You.
      </h1>
      <p class="text-xl text-slate-300">
        Your registration has been received.
      </p>
      <div class="bg-white/5 border border-white/10 rounded-xl p-6 text-left space-y-4">
        <h2 class="text-sm font-bold uppercase tracking-widest text-slate-400">Your session</h2>
        <p class="text-slate-300">{SESSION_TIME}</p>
        <p class="text-sm font-semibold text-white">Join via Google Meet:</p>
        <a 
          href={GOOGLE_MEET_URL} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-block break-all text-via-light hover:underline"
        >
          {GOOGLE_MEET_URL}
        </a>
        <p class="text-sm text-slate-400">We've also sent this link to your email. Add the session to your calendar and we'll see you there.</p>
      </div>
      <div class="pt-4">
        <a 
          href={`${import.meta.env.BASE_URL}/`} 
          class="inline-block px-8 py-4 border-2 border-white font-bold uppercase tracking-widest hover:bg-white hover:text-via-black transition-all"
        >
          Return Home
        </a>
      </div>
    </div>
  </main>
</Layout>
