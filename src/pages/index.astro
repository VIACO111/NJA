---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/landing/Hero.astro';
import AbstractEventDetails from '../components/landing/AbstractEventDetails.astro';
import Agenda from '../components/landing/Agenda.astro';
import OfferSection from '../components/landing/OfferSection.astro';
import SpeakerBio from '../components/landing/SpeakerBio.astro';
import OnePowerfulWay from '../components/landing/OnePowerfulWay.astro';
import Resources from '../components/landing/Resources.astro';

const BASE = import.meta.env.BASE_URL;
const TRAINING_SIGNUP_URL = `${BASE}/signup`;
const TEAM_PROGRAM_PDF_URL = `${BASE}/via-assets/Team Performance Program - We are VIA.pdf`;
const CALENDLY_URL = 'https://calendly.com/callbackvia/meeting';

// ——— Page meta (browser tab, SEO) ———
const PAGE_TITLE = "Say the hard thing | Strategic Training for P&C Leaders | VIA CO";
const PAGE_DESCRIPTION = "Free training for P&C folks: improve decision quality in your organisation and get more buy-in from your C-suite.";

// ——— Hero ———
const HERO_TITLE = "Say the hard thing";
const HERO_SUBTITLE = "Driving tough conversations with your team";
const HERO_BODY = "A strategic training for P&C Leaders to understand the physiology of conflict, the cost of avoiding it, and how to build a compelling business case that will get your C-suite excited and on-board.";

// ——— Abstract / Why this matters ———
const ABSTRACT_TITLE = "Why this matters?";
const ABSTRACT_PARAGRAPHS = [
  { lead: true, text: "HR is often the first to notice the quiet frictions and 'ghost conflicts' that stall growth." },
  { text: "But navigating these moments is inherently difficult because the human brain is biologically wired to avoid social threat at all costs. It’s not a lack of skill - it’s a hardware issue that makes \"saying the hard thing\" feel like a survival risk." },
  { text: "This training changes that, teaching you the science and tools to have the tough conversations and turn problems into creative solutions." },
];
const ABSTRACT_ONLINE_DATE = "Thursday, 26th Feb";
const ABSTRACT_ONLINE_TIME = "1:00 PM (AEDT)";
const ABSTRACT_EVENT_LABEL = "Online Session";
const ABSTRACT_LOCATION_LABEL = "Zoom / Remote";
const ABSTRACT_REGISTER_LABEL = "Register Now";

// ——— Agenda ———
const AGENDA_SECTION_TITLE = "Training Agenda";
const AGENDA_SECTION_INTRO = "A structured approach to mastering strategic conversations and getting executive buy-in.";
const AGENDA_ITEMS = [
  {
    number: 1,
    title: "The Physiology of Conflict",
    body: 'Learn why the brain "short-circuits" during intense conversations and how to hack your physiology to get the best outcomes for the business.',
    iconPath: "via-assets/Buildup/Vision.svg",
  },
  {
    number: 2,
    title: "The Cost of Avoidance",
    body: 'Understand the real price of silence and stop the "energy leaks" that are slowing your team down and wasting your company\'s money.',
    iconPath: ["via-assets/Buildup/Vision.svg", "via-assets/Buildup/Alignment.svg"],
  },
  {
    number: 3,
    title: "Getting C-suite buy-in",
    body: 'Stop just "managing" people and show your C-suite that improving team dynamics is the fastest way to hit your growth and financial goals.',
    iconPath: ["via-assets/Buildup/Vision.svg", "via-assets/Buildup/Direction.svg", "via-assets/Buildup/Alignment.svg"],
  },
];

// ——— Speaker ———
const SPEAKER_SECTION_TITLE = "Your facilitators";
const SPEAKER_INTRO = "Jesús and Anastasiya created VIA Co to bring neuroscience, psychology and facilitation together so leaders can have the conversations that matter.";
const SPEAKERS = [
  {
    name: "Jesús Fernández",
    title: "CEO and Co-founder at VIA Co.",
    bio: "Jesus is a veteran facilitator with over 14 years of experience architecting high-impact programs for Fortune 500 companies. Having partnered with executive teams at global leaders like Google, Deloitte, and Cisco, he specialises in navigating the complex dynamics of high-stakes corporate environments. At VIA Co, he leverages this deep expertise to help leaders build robust executive infrastructure for long-term organisational health.",
    imageSrc: `${BASE}/via-assets/Presenters.png`,
  },
  {
    name: "Anastasiya Loukienko",
    title: "COO and Co-founder at VIA Co.",
    bio: "Anastasiya is an expert in the mechanics of high-performance teams, having led People & Culture at Eucalyptus and partnered with industry leaders like Canva and Atlassian to strategically grow their workforces. At VIA Co, she bridges the gap between P&C and executive strategy, facilitating flow-state workshops and deep conversations that enable leadership teams and drive scalable growth.",
    imageSrc: `${BASE}/via-assets/Presenters.png`,
  },
];

// ——— One Powerful Way ———
const OPW_LINES = ["One", "Powerful", "Way"];
const OPW_BODY = "At VIA we turn hard conversations into creative solutions through unique bespoke offsites.";
const OPW_CTA_LABEL = "Learn More";
const OPW_CTA_URL = "https://www.wearevia.co";

// ——— Offer section ———
const OFFER_BADGE = "Exclusive Offer";
const OFFER_TITLE = "Team Performance Program";
const OFFER_DESCRIPTION = "Gearing up for something bigger? We run an elite Team Performance Program in partnership with a stunning retreat centre in the Blue Mountains.";
const OFFER_DISCOUNT_PERCENT = "30%";
const OFFER_DISCOUNT_TITLE = "OFF Team Performance Program";
const OFFER_PDF_BUTTON = "Download Program PDF";
const OFFER_CALENDLY_BUTTON = "Book a Discovery Call";
const OFFER_FOOTNOTE = "For HR professionals and leaders looking to tackle team performance head-on.";
const OFFER_CHALLENGE_TITLE = "The Challenge for Teams";
const OFFER_CHALLENGE_DESCRIPTION = "The biggest downfall teams experience is an inability to transform problems into solutions. This blocks you from moving forward and results in many avoidable mistakes being made.";
const OFFER_SYMPTOMS_LABEL = "Common Symptoms Include:";
const OFFER_SYMPTOMS = [
  { title: "Difficult conversations", text: "that are repeatedly put off or avoided" },
  { title: "Complex problem solving", text: "attempted without sufficient time" },
  { title: "Resistance to change", text: "due to unresolved fears" },
];
const OFFER_QUOTE = "";

// ——— Resources ———
const RESOURCES_TITLE = "Choose one of the following";
const RESOURCES_SUBTITLE = "Secure your spot for the training, explore the team program, or join the community.";
const RESOURCES_LIST = [
  { title: "Attend the Training", href: TRAINING_SIGNUP_URL, description: "Limited to 10 spots · 2 groups · first come, first served" },
  { title: "Download Team Program PDF", href: TEAM_PROGRAM_PDF_URL, description: 'Get the full details on "The Way of Strength"' },
  { title: "Book a Strategy Call", href: CALENDLY_URL, description: "Discuss your team's needs directly with us" },
];
---

<Layout title={PAGE_TITLE} description={PAGE_DESCRIPTION}>
  <main class="relative bg-white">
    <Hero
      title={HERO_TITLE}
      subtitle={HERO_SUBTITLE}
      body={HERO_BODY}
      primaryCtaUrl={TRAINING_SIGNUP_URL}
      primaryCtaLabel="Sign up"
    />

    <AbstractEventDetails
      title={ABSTRACT_TITLE}
      paragraphs={ABSTRACT_PARAGRAPHS}
      onlineDate={ABSTRACT_ONLINE_DATE}
      onlineTime={ABSTRACT_ONLINE_TIME}
      signupUrl={TRAINING_SIGNUP_URL}
      eventLabel={ABSTRACT_EVENT_LABEL}
      locationLabel={ABSTRACT_LOCATION_LABEL}
      registerLabel={ABSTRACT_REGISTER_LABEL}
    />

    <Agenda
      sectionTitle={AGENDA_SECTION_TITLE}
      sectionIntro={AGENDA_SECTION_INTRO}
      items={AGENDA_ITEMS}
    />

    <SpeakerBio
      sectionTitle={SPEAKER_SECTION_TITLE}
      intro={SPEAKER_INTRO}
      speakers={SPEAKERS}
    />

    <OnePowerfulWay
      headlineLines={OPW_LINES}
      body={OPW_BODY}
      ctaLabel={OPW_CTA_LABEL}
      ctaUrl={OPW_CTA_URL}
    />

    <OfferSection
      pdfUrl={TEAM_PROGRAM_PDF_URL}
      calendlyUrl={CALENDLY_URL}
      imageUrl={`${BASE}/via-assets/workshop.jpg`}
      badgeLabel={OFFER_BADGE}
      title={OFFER_TITLE}
      description={OFFER_DESCRIPTION}
      discountPercent={OFFER_DISCOUNT_PERCENT}
      discountTitle={OFFER_DISCOUNT_TITLE}
      pdfButtonLabel={OFFER_PDF_BUTTON}
      calendlyButtonLabel={OFFER_CALENDLY_BUTTON}
      footnote={OFFER_FOOTNOTE}
      challengeTitle={OFFER_CHALLENGE_TITLE}
      challengeDescription={OFFER_CHALLENGE_DESCRIPTION}
      symptomsLabel={OFFER_SYMPTOMS_LABEL}
      symptoms={OFFER_SYMPTOMS}
      quote={OFFER_QUOTE}
    />

    <Resources
      title={RESOURCES_TITLE}
      subtitle={RESOURCES_SUBTITLE}
      resources={RESOURCES_LIST}
    />
  </main>
</Layout>
