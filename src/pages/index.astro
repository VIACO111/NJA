---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/landing/Hero.astro';
import AbstractEventDetails from '../components/landing/AbstractEventDetails.astro';
import Agenda from '../components/landing/Agenda.astro';
import OfferSection from '../components/landing/OfferSection.astro';
import SpeakerBio from '../components/landing/SpeakerBio.astro';
import OnePowerfulWay from '../components/landing/OnePowerfulWay.astro';
import Resources from '../components/landing/Resources.astro';

// Replace with your actual signup link (e.g. from QR code)
const TRAINING_SIGNUP_URL = `${import.meta.env.BASE_URL}/signup`;
const TEAM_PROGRAM_PDF_URL = `${import.meta.env.BASE_URL}/via-assets/Team Performance Program - We are VIA.pdf`;
const CALENDLY_URL = 'https://calendly.com/callbackvia/meeting';
---

<Layout
  title="Say the hard thing | Strategic Training for P&C Leaders | VIA CO"
  description="Free training for P&C folks: improve decision quality in your organisation and get more buy-in from your C-suite."
>
  <main class="relative bg-white">
    <Hero
      title="Say the hard thing"
      subtitle="Strategic Training for P&C Leaders"
      body="Discover a way to have difficult conversations with your teams without your heart rate skyrocketing. Understand the physiology of conflict, the cost of avoidance, and how to build a compelling business case that will get your C-suite excited and on-board."
      primaryCtaUrl={TRAINING_SIGNUP_URL}
      primaryCtaLabel="Sign up"
    />
    
    <AbstractEventDetails
      onlineDate="Wednesday, 25th Feb"
      onlineTime="1:00 PM (AEDT)"
      signupUrl={TRAINING_SIGNUP_URL}
      title="Why this matters"
    />

    <Agenda />

    <SpeakerBio
      name="The VIA team"
      title="Executive infrastructure & strategic facilitation"
      bio="At VIA, we've conducted incredible workshops all around the world. We've developed a systematic way to have really rich conversations by entering into flow state. The result? Teams that are able to innovate, push through, and tackle blockages head-on, transforming them into opportunities."
      imageSrc={`${import.meta.env.BASE_URL}/via-assets/Presenters.png`}
    />

    <OnePowerfulWay />

    <OfferSection
      pdfUrl={TEAM_PROGRAM_PDF_URL}
      calendlyUrl={CALENDLY_URL}
      imageUrl={`${import.meta.env.BASE_URL}/via-assets/workshop.jpg`}
    />
    
    <Resources
      title="Choose one of the following"
      resources={[
        { title: 'Attend the Training', href: TRAINING_SIGNUP_URL, description: 'Limited to 10 spots · 2 groups · first come, first served' },
        { title: 'Download Team Program PDF', href: TEAM_PROGRAM_PDF_URL, description: 'Get the full details on "The Way of Strength"' },
        { title: 'Book a Strategy Call', href: CALENDLY_URL, description: 'Discuss your team\'s needs directly with us' },
      ]}
    />
  </main>
</Layout>
