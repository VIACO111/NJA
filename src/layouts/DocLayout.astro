---
import Layout from './Layout.astro';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
const isBigText = frontmatter.bigText;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <main class:list={["max-w-4xl mx-auto px-6 py-20 prose prose-slate", { "big-text": isBigText }]}>
    <slot />
    <div class="mt-12 pt-8 border-t border-slate-200">
      <a href="/" class="text-via-navy hover:underline font-medium">‚Üê Back to landing page</a>
    </div>
  </main>
</Layout>

<style is:global>
  /* Basic markdown styling since we might not have @tailwindcss/typography */
  .prose h1 { @apply text-4xl font-bold mb-8 text-via-navy; }
  .prose h2 { @apply text-2xl font-bold mt-12 mb-4 text-via-navy; }
  .prose p { @apply text-lg text-slate-700 mb-4 leading-relaxed; }
  .prose ul { @apply list-disc ml-6 mb-6 text-slate-700; }
  .prose li { @apply mb-2; }
  .prose strong { @apply font-semibold text-via-navy; }
  .prose hr { @apply my-12 border-slate-200; }

  /* Big Text Mode */
  .big-text h1 { @apply text-6xl mb-12; }
  .big-text h2 { @apply text-4xl mt-16 mb-8; }
  .big-text p, .big-text ul, .big-text li { @apply text-3xl leading-normal mb-8 text-slate-800; }
  .big-text strong { @apply font-bold text-via-navy; }
</style>
