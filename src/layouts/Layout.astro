---
import '../styles/global.css';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  /** Open Graph title (defaults to title) */
  ogTitle?: string;
  /** Open Graph description (defaults to description) */
  ogDescription?: string;
  /** Image path under public/ (e.g. via-assets/Snippet.png). Resolved to absolute URL for og:image. */
  ogImage?: string;
  /** Optional: image width in px (LinkedIn recommends 1200). */
  ogImageWidth?: number;
  /** Optional: image height in px (LinkedIn recommends 627 for 1.91:1). */
  ogImageHeight?: number;
  /** Publisher/site name (e.g. "VIA CO"). Shown as publisher on LinkedIn. */
  ogSiteName?: string;
  /** Author for the share card (e.g. "VIA CO" or URL to profile). */
  ogAuthor?: string;
  /** Canonical URL for this page (for og:url and rel=canonical). If omitted, derived from Astro.url. */
  ogUrl?: string;
  /** MIME type for og:image (e.g. "image/png"). Defaults to "image/png" when ogImage is set. */
  ogImageType?: string;
}

const { title, description = 'Training · VIA CO', ogTitle, ogDescription, ogImage, ogImageWidth, ogImageHeight, ogImageType, ogSiteName, ogAuthor, ogUrl } = Astro.props;
const site = import.meta.env.SITE ?? '';
const base = (import.meta.env.BASE_URL ?? '/').replace(/\/?$/, '/');
// LinkedIn requires og:url — canonical URL of the page (absolute)
const absolutePageUrl = ogUrl ?? new URL(Astro.url.pathname, site).href;
const imagePath = ogImage ? [base.replace(/\/$/, ''), ogImage.replace(/^\//, '')].join('/') : '';
const absoluteImageUrl = imagePath ? new URL(imagePath, site).href : null;
const imageType = (ogImageType ?? (absoluteImageUrl?.toLowerCase().endsWith('.png') ? 'image/png' : 'image/jpeg')).toLowerCase();
---

<!doctype html>
<html lang="en-AU">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <!-- Open Graph (LinkedIn Post Inspector requires all of these) -->
    <meta property="og:url" content={absolutePageUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={ogTitle ?? title} />
    <meta property="og:description" content={ogDescription ?? description} />
    {ogSiteName && <meta property="og:site_name" content={ogSiteName} />}
    {ogAuthor && <meta property="article:author" content={ogAuthor} />}
    {absoluteImageUrl && (
      <>
        <meta property="og:image" content={absoluteImageUrl} />
        <meta property="og:image:secure_url" content={absoluteImageUrl} />
        <meta property="og:image:type" content={imageType} />
        {ogImageWidth != null && <meta property="og:image:width" content={String(ogImageWidth)} />}
        {ogImageHeight != null && <meta property="og:image:height" content={String(ogImageHeight)} />}
      </>
    )}
    <link rel="canonical" href={absolutePageUrl} />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/via-assets/${encodeURI('VIA Logo Black Fill.svg')}`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-via-black">
    <header class="absolute top-0 left-0 w-full z-40 p-6">
      <div class="mx-auto max-w-6xl">
        <a href="https://wearevia.co" target="_blank" rel="noopener noreferrer" class="inline-block">
          <img src={`${import.meta.env.BASE_URL}/via-assets/logo-white.svg`} alt="VIA CO" class="h-8 sm:h-10 opacity-90 hover:opacity-100 transition-opacity" />
        </a>
      </div>
    </header>
    <slot />
    <Footer />
  </body>
</html>
